<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="window"
            maxHeight="260.0"
            maxWidth="260.0"
            minWidth="260.0"
            onMouseDragged="#onMouseDragged"
            onMousePressed="#onMousePressed"
            prefWidth="260.0"
            styleClass="dialogContainer"
            stylesheets="@../dialogs.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controledereagentes.controllers.nfes.NewController">
    <center>
        <VBox prefWidth="240.0"
              spacing="20.0"
              BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <BorderPane.margin>
                <Insets bottom="10.0"
                        left="10.0"
                        right="10.0"
                        top="10.0" />
            </BorderPane.margin>
            <VBox>
                <children>
                    <Label styleClass="commonText"
                           text="RazÃ£o Social">
                        <padding>
                            <Insets bottom="4.0"
                                    left="2.0" />
                        </padding>
                    </Label>
                    <TextField fx:id="razao_social_input"
                               styleClass="input">
                    </TextField>
                </children>
            </VBox>
            <VBox>
                <children>
                    <Label styleClass="commonText"
                           text="CNPJ">
                        <padding>
                            <Insets bottom="4.0"
                                    left="2.0" />
                        </padding>
                    </Label>
                    <TextField fx:id="cnpj_input"
                               styleClass="input">
                    </TextField>
                </children>
            </VBox>
        </VBox>
    </center>
    <bottom>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES"
                                           minWidth="10.0"
                                           prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES"
                                           minWidth="10.0"
                                           prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0"
                                        prefHeight="40.0"
                                        vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Button maxWidth="100.0"
                            minWidth="100.0"
                            mnemonicParsing="false"
                            onAction="#onConfirmButtonClick"
                            prefWidth="100.0"
                            styleClass="button"
                            text="Confirmar"
                            GridPane.halignment="CENTER"
                            GridPane.valignment="CENTER">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button maxWidth="100.0"
                            minWidth="100.0"
                            mnemonicParsing="false"
                            onAction="#onCancelButtonClick"
                            prefWidth="100.0"
                            styleClass="button"
                            text="Cancelar"
                            GridPane.columnIndex="1"
                            GridPane.halignment="CENTER"
                            GridPane.valignment="CENTER">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                </GridPane>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES"
                                           minWidth="10.0"
                                           prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0"
                                        vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label fx:id="errorMessage"
                               styleClass="commonText"
                               GridPane.halignment="CENTER"
                               GridPane.valignment="CENTER">
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </GridPane>
            </children>
        </VBox>
    </bottom>
</BorderPane>
